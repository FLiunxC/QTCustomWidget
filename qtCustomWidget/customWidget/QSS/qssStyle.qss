/**
    QListWidget中Item的QSS定制选中和非选中时的颜色显示
*/
QListWidget#widget_LeftOrder_PanelListWidget::item:selected{
        background:#F7F7F7;

}
QListWidget#widget_LeftOrder_PanelListWidget::item:selected:!active{
        active{
        background:#FFFFFF;
        }
}
QListWidget::item:hover {
    background: #BDD7FD;
}

QListWidget#widget_LeftOrder_PanelListWidget{outline:0px;}

/**
    QLineEdit 的定制
*/
QLineEdit{
    background:rgba(255,255,255,1);
    border-radius:2px;
    border:1px solid rgba(234,234,234,1);
}

QLineEdit:enabled:focus {
    border:1px solid #AAAAAA;
}
